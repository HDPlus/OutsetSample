<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:id="@+id/top_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/parameter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="Fluid removed" />

        <TextView
            android:id="@+id/parameter_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/colorGreen"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="600" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_bar_background"
        android:indeterminate="false"
        android:max="1800"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="600"
        android:splitTrack="false"
        android:thumb="@null"
        tools:progressDrawable="@drawable/progress_bar_drawable" />

    <LinearLayout
        android:id="@+id/bottom_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/min_possible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorGray"
            tools:text="-199" />

        <TextView
            android:id="@+id/max_possible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/colorGray"

            tools:text="1800 mL" />

    </LinearLayout>

</LinearLayout>